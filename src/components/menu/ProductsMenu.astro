---
import CoffeeMenu from "@/components/menu/CoffeeMenu.astro"
import ComidaMenu from "@/components/menu/ComidaMenu.astro";


---

<section class="bg-c-coffee-900 py-10 -mt-20">
  <div class="max-w-6xl 2xl:max-w-7xl mx-auto bg-menu-image bg-no-repeat bg-[center_80px] bg-contain pt-[150px] lg:pt-[250px] pb-40">
    <h3 class="text-white text-center font-black text-xl pb-4 uppercase">
      Nuestro Deliciosos
      <span class="text-4xl block">Menu</span>
    </h3>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-5 mt-10">
      <CoffeeMenu />
      <ComidaMenu />
    </div>
  </div>
</section>
