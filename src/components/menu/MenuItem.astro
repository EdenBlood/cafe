---
import { Picture } from "astro:assets";
import type { FeaturedImages } from "@/types/index.types";
import { formatCurrency } from "@/utils/index";

interface Props {
  images: FeaturedImages;
  title: string;
  description: string;
  price: number;
}

const { images, title, description, price } = Astro.props;
---

<li class="flex flex-col md:flex-row lg:justify-between gap-5 w-full md:items-center p-5">
  <div class="flex-1 flex flex-col md:flex-row gap-5 items-center">
    <div class="w-full md:-w-40 lg:w-56 overflow-hidden">
      <a href={images.full.url} data-pswp-width={images.full.width} data-pswp-height={images.full.height} target="_blank">
        <Picture
          src={images.medium.url}
          width={images.medium.width}
          height={images.medium.height}
          alt={`Imagen del producto ${title}`}
          formats={["avif", "webp"]}
          class="w-full h-64 md:h-40 object-cover object-center border-8 border-white"
        />
      </a>

    </div>

    <div class="flex-1">
      <p class="text-white font-bold text-2xl text-center md:text-left">{title}</p>
      <p class="text-c-coffee-400 text-lg text-center md:text-left">{description}</p>
    </div>
  </div>

  <p class="text-4xl font-black text-white text-center md:text-left">{formatCurrency(price)}</p>
</li>
