---
import Logo from '@/assets/logo.svg'
import MainNav from './MainNav.astro'

interface Props {
  bgImage: string
  tagLine: string
}

const { bgImage, tagLine } = Astro.props
---

<header class="relative min-h-72 pb-72">
  <!-- Image -->
  <div
    class="absolute inset-0 bg-cover bg-center"
    style={{ backgroundImage: `url(${bgImage})` }}
  >
  </div>
  <div class="absolute inset-0 bg-black/60"></div>

  <!-- Header -->
  <div class="relative mx-auto max-w-6xl py-3 2xl:max-w-7xl">
    <div class="flex flex-col items-center lg:flex-row lg:justify-between">
      <a href="/">
        <Logo class="w-72" />
      </a>
      <MainNav />
    </div>

    <h1 class="mt-12 text-center text-4xl font-black text-white uppercase">
      {tagLine}
    </h1>
  </div>
</header>
