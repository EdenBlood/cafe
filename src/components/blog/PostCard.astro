---
import { Picture } from "astro:assets"
import { type PostData } from "@/types/index.types"
import PostMeta from "./PostMeta.astro"
import PostCategory from "./PostCategory.astro"

  interface Props {
    post: PostData
  }

  const { post } = Astro.props
---
<article class="grid grid-cols-1 lg:grid-cols-3 gap-5 py-10 border-b border-b-zinc-300 last-of-type:border-b-0 items-center">
  <div class="lg:col-span-2 space-y-3">
    <h3 class="text-c-coffee-900 text-4xl font-black uppercase hover:text-c-coffee-700 transition-colors duration-300">
      <a href={`/blog/${post.slug}`}>
        {post.title.rendered}
      </a>
    </h3>

    <PostMeta date={post.date} />

    <div class="flex gap-2">
      {post.category_details.map((category) => (
        <PostCategory category={category} />
      ))}
    </div>

    <div class="line-clamp-2 text-lg" set:html={post.content.rendered}></div>
  </div>

  <Picture src={post.featured_images. medium_large.url} alt={`Imagen del post ${post.title.rendered}`} width={post.featured_images.medium_large.width} height={post.featured_images.medium_large.height} formats={["avif", "webp"]} class="w-full lg:96 h-64 object-cover object-center rounded-2xl" />
</article>
